@model Ropey_DVDs.Models.CastMember

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CastMember</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DVDTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DVDTitle.DVDNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.ActorSurname)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DVDNumber" />
        <input type="hidden" asp-for="ActorNumber" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index"><i class="fa-solid fa-arrow-left"></i></a>
    </form>
</div>
