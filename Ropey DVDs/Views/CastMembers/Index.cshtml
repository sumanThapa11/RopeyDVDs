@using Ropey_DVDs.Models.ViewModels
@model IList<DVDCastViewModel>


@{
    ViewData["Title"] = "Index";
}


<div style="font-family:Arial">

        <input class="form-control me-sm-2" type="text" placeholder="Search">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    

    @using(Html.BeginForm("Index","CastMembers",FormMethod.Get))
    {
 <form class="d-flex">
     <p>
         <input type="search" placeholder="Search Cast Member" value="search" style="width:300px;" />
         <input type="submit" value="Search" class="btn btn-primary" />
     </p>
    @Html.TextBox("search") <input type="submit" value="Search" style="width:150px"; class="btn btn-outline-info"  /><i class="fa-solid fa-magnifying-glass"></i> 
     </form>
    }

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary"> Cast Members </h2>

        </div>
        <div class="col-4 text-end">
            <a asp-action="Create" class="btn btn-outline-primary"> <i class="bi bi-plus-circle-fill"></i>
             
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" border="1">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.DVDTitle)*@
                DVD Title
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.ActorSurname)*@
               Actor Surname
            </th>
            
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DVDTitle)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.ActorSurname)
            </td>
        </tr>
}
    </tbody>
</table>

</div>