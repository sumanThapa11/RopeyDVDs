@model Ropey_DVDs.Models.CastMember

@{
    ViewData["Title"] = "Create";
}


<h4>Create Cast Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DVDNumber" class="control-label"></label>
                <select asp-for="DVDNumber" class ="form-control" asp-items="ViewBag.DVDNumber"></select>
            </div>
            <div class="form-group">
                <label asp-for="ActorNumber" class="control-label"></label>
                <select asp-for="ActorNumber" class ="form-control" asp-items="ViewBag.ActorNumber"></select>
            </div>
            <div class="form-group mt-2" >
                <input type="submit" value="Create" class=" btn btn-outline-primary"/>
                <a asp-action="Index"><i class="fa-solid fa-arrow-left"></i></a>
            </div>
        </form>
    </div>
</div>
