@model Ropey_DVDs.Models.DVDCategory

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DVDCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryNumber" />
            <div class="form-group">
                <label asp-for="CategoryDescription" class="control-label"></label>
                <input asp-for="CategoryDescription" class="form-control" />
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AgeRestricted" /> @Html.DisplayNameFor(model => model.AgeRestricted)
                </label>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-outline-primary" />   <a asp-action="Index"><i class="fa-solid fa-arrow-left"></i></a>
   

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
